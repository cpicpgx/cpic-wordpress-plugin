<table class="table table-condensed table-striped" id="tableCpicAlleles">
    <caption>There is also a <a href="https://api.cpicpgx.org/data/cpic.alleles.csv">CSV version of this table</a> for download.</caption>
    <thead>
    <tr>
        <th></th>
        <th>Allele</th>
        <th>Gene</th>
        <th>Guideline</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
        <tr>
            <td style="text-align:right;padding-right:1em;">{{position}}</td>
            <td>{{allelename}}</td>
            <td>{{genesymbol}}</td>
            <td><ul class="list-unstyled">
                {{#each guidelines}}
                    <li><a href="{{url}}">{{name}}</a></li>
                {{/each}}
            </ul></td>
        </tr>
    {{/each}}
    </tbody>
</table>
